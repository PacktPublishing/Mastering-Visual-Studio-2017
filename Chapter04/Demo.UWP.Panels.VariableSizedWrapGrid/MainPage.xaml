            Width="100" Height="208" 
            VariableSizedWrapGrid.RowSpan="2"/>
    <Border Background="Orange" Margin="4" 
            Width="208" Height="100" 
            VariableSizedWrapGrid.ColumnSpan="2"/>
    <Border Background="Orange" Margin="4"
            Width="100" Height="100" />
    <Border Background="Orange" Margin="4" 
            Width="100" Height="100" />
    <Border Background="Orange" Margin="4" 
            Width="100" Height="100" />
